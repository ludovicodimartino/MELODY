@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh:    <http://www.w3.org/ns/shacl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix mel:  <http://www.dei.unipd.it/~gdb/ontology/melody#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .

mel:SongShape
    a sh:NodeShape ;
    sh:targetClass mel:Song ;
    sh:property [
        sh:path mel:name ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ];
    sh:property [
        sh:path mel:duration ;
        sh:datatype xsd:positiveInteger ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ];
    sh:property [
        sh:path mel:songType ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ];
    sh:property [
        sh:path mel:acousticness ;
        sh:datatype xsd:float ;
        sh:maxCount 1 ;
        sh:minInclusive 0.0 ;
        sh:maxInclusive 1.0 ;
    ];
    sh:property [
        sh:path mel:danceability ;
        sh:datatype xsd:float ;
        sh:maxCount 1 ;
        sh:minInclusive 0.0 ;
        sh:maxInclusive 1.0 ;
    ];
    sh:property [
        sh:path mel:bpm ;
        sh:datatype xsd:positiveInteger ;
        sh:maxCount 1 ;
        sh:maxInclusive 1015 ;
    ];
    sh:property [
        sh:path mel:valence ;
        sh:datatype xsd:float ;
        sh:maxCount 1 ;
        sh:minInclusive 0.0 ;
        sh:maxInclusive 1.0 ;
    ];
    sh:closed true ;
    sh:ignoredProperties ( rdf:type owl:topDataProperty owl:topObjectProperty mel:key mel:isRemixOf mel:classified mel:isInAlbum mel:sungBy mel:winner mel:candidated ) ;
.